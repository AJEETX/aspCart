@model aspCart.Web.Areas.Admin.Models.Catalog.ProductCreateOrUpdateModel
@{
    ViewData["Title"] = "About";
}
<style>
    .breadcrumb li::after {
        display: inline;
    }
</style>

<div class="container">

    <section class=" content-wrapper content-header">
        <ol class=" breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active"> About</a></li>
        </ol>
    </section>


    <section class="content">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">
                    <label>@Model.Name</label>
                </h3>
            </div>
            <div class="box-body">
                <div>@Html.Raw(Model.Description)</div>
            </div>
        </div>
    </section>
</div>